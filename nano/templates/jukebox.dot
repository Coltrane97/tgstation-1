<article class="display">
    <header><h2>Now Playing: {{=data.current_track}}</h2></header>
    <section>
        <span class="label">Playback:</span>
        <div class="content">
            {{=helper.link('Play', 'play', 'play', null, data.playing ? 'disabled' : null)}}
            {{=helper.link('Stop', 'stop', 'stop', null, data.playing ? null : 'disabled')}}
        </div>
    </section>

    <section>
        <span class="label">Available Tracks:</span>
        <div class="content">
            {{~ data.tracks:track:i}}
                    {{=helper.link(track.track, 'gear', 'change', {'track': track.track}, track.track == data.current_track ? 'disabled' : null)}}<br />
            {{~}}
        </div>
    </section>
</article>